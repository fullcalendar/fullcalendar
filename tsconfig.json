{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "fullcalendar": [ "src/core/main" ],
      "fullcalendar-agenda": [ "src/agenda/main" ],
      "fullcalendar-list": [ "src/list/main" ],
      "fullcalendar-gcal": [ "src/gcal/main" ],
      "fullcalendar-rrule": [ "src/rrule/main" ],
      "fullcalendar-luxon": [ "src/luxon/main" ],
      "fullcalendar-moment": [ "src/moment/main" ],
      "fullcalendar-moment-timezone": [ "src/moment-timezone/main" ]
    },
    "types": [
      "luxon",
      "jquery",
      "jasmine",
      "jasmine-jquery"
    ],
    "outDir": "tmp/tsc-output"
  },
  "include": [
    "src/**/main.ts",
    "locales/*.js",
    "tests/automated/globals.d.ts",
    "tests/automated/**/*.js"
  ]
}
